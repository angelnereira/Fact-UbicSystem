rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Configurations can only be read and modified by authenticated users.
    // This is a secure collection.
    match /configurations/{configId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // User profiles can only be managed by authenticated users.
    // Typically, you'd restrict this to the user themselves.
    match /users/{userId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // API endpoints (like webhooks or system processes) can write to these
    // collections without user authentication. This is necessary for server-to-server communication.
    match /invoiceSubmissions/{submissionId} {
      allow read: if request.auth != null; // Only authenticated users can read logs
      allow create, update: if true; // Allow server-side processes to write
    }

    match /hkaResponses/{responseId} {
      allow read: if request.auth != null; // Only authenticated users can read logs
      allow create: if true; // Allow server-side processes to write
    }

    // Default deny for any other path.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
